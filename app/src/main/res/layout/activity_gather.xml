<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.GatherActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_rounded_rectangle">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_back"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/housemessage_back" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:text="收款"
                android:textColor="@color/white"
                android:textSize="20dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_headimg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="29dp"
            android:src="@mipmap/default_headimg" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_headimg"
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true"
            android:text="QuLian"
            android:textColor="#FF222328"
            android:textSize="20dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="60dp"
                android:singleLine="true"
                android:text="yeudhkdskandhdjewuaolakxndgaja"
                android:textColor="#FF4A4A4A"
                android:textSize="11dp"/>

            <ImageView
                android:id="@+id/iv_copy"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/copy"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="bottom"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="55dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金额："
                android:textSize="13dp"
                android:textColor="#FF4A4A4A"/>

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="17dp"
                android:textColor="@color/black"
                android:background="@color/white"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:hint="请输入转账金额"
                android:textColorHint="#FFD5D5D5"
                android:textSize="13dp"/>

            <TextView
                android:id="@+id/tv_money_unit"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:textSize="11dp"
                android:gravity="center"
                android:text="BTC"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFDFDFDF"
            android:layout_marginHorizontal="82dp"
            android:layout_marginTop="10dp">
        </View>

        <LinearLayout
            android:layout_marginTop="26dp"
            android:layout_marginBottom="26dp"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:textSize="11dp"
                android:gravity="center"
                android:text="发送收款二维码"/>

            <ImageView
                android:id="@+id/iv_qrcode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                />

        </LinearLayout>
    </LinearLayout>



</LinearLayout>