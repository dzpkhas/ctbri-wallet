<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEDEDED"
    android:id="@+id/root"
    tools:context=".fragment.maintab.dapp.DappFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/bg_rectangle"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="104dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_rmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="¥"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/tv_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/tv_rmb"
                android:textColor="#FFFFFF"
                android:text="0.00"
                android:textStyle="bold"
                android:textSize="36dp"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="总资产"
            android:textSize="14dp"
            android:textColor="#99FFFFFF"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_marginTop="204dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <ImageView
        android:id="@+id/iv_add_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/add_wallet"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="7dp"/>

    <LinearLayout
        android:id="@+id/ll_create_wallet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_rectangle"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:layout_width="93dp"
            android:layout_height="88dp"
            android:src="@mipmap/wallet" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textSize="11dp"
            android:text="您的钱包还是空的，赶紧创建一个吧"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_create_wallet"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="48dp"
            android:layout_marginHorizontal="50dp"
            android:background="@mipmap/create_wallet"
            android:gravity="center"
            android:text="免费创建钱包"
            android:textColor="#FF0881E2"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/tv_reissue_wallet"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="48dp"
            android:layout_marginHorizontal="50dp"
            android:background="@mipmap/create_wallet"
            android:gravity="center"
            android:text="补卡"
            android:textColor="#FF0881E2"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/tv_iccid"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="50dp"
            android:background="@mipmap/create_wallet"
            android:layout_marginTop="48dp"
            android:text="898603181112712X109"
            android:hint="iccid"
            android:textColor="#FF0881E2"
            android:gravity="center"
            android:textSize="15dp"
             />

        <EditText
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="50dp"
            android:background="@mipmap/create_wallet"
            android:layout_marginTop="48dp"
            android:text="17710358115"
            android:hint="phoneNO."
            android:textColor="#FF0881E2"
            android:gravity="center"
            android:textSize="15dp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:id="@+id/ll_personal_center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_personal_center"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="20dp"
                android:scaleType="fitXY"
                android:src="@mipmap/personal_center" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="钱包"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/ll_address_book"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:scaleType="fitXY"
                android:src="@mipmap/address_book" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>