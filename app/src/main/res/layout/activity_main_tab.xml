<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <cn.hyperchain.hitoken.view.SlidingMenu xmlns:tools="http://schemas.android.com/tools"
        xmlns:zhy="http://schemas.android.com/apk/res-auto"
        android:id="@+id/id_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:scrollbars="none"
        zhy:rightPadding="50dp">

        <LinearLayout
            android:id="@+id/root"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="horizontal">
            <include layout="@layout/layout_menu" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@id/root"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/fl_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="56dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="#FF212121"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tab_wallet"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="6dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/tab_icon_wallet"
                        android:gravity="center"
                        android:text="钱包"
                        android:textColor="@drawable/tab_main_text_color"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tab_market"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="6dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/tab_icon_market"
                        android:gravity="center"
                        android:text="行情"
                        android:textColor="@drawable/tab_main_text_color"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tab_community"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="6dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/tab_icon_community"
                        android:gravity="center"
                        android:text="社群"
                        android:textColor="@drawable/tab_main_text_color"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tab_dapp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="6dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/tab_icon_dapp"
                        android:gravity="center"
                        android:text="DAPP"
                        android:textColor="@drawable/tab_main_text_color"
                        android:textSize="12dp" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </cn.hyperchain.hitoken.view.SlidingMenu>


</LinearLayout>
