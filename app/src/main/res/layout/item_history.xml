<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#E3FFFFFF"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/fl_header"
        android:layout_width="match_parent"
        android:background="#F7F7F7"
        android:layout_height="22dp"
        android:visibility="visible">
        <TextView
            android:id="@+id/tv_year"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="9dp"
            android:textColor="#FF8E8E93"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:text="2018"/>
    </FrameLayout>
    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFEAEBED"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_headimg"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="22dp"
            android:src="@mipmap/headimg" />
        <LinearLayout
            android:layout_toEndOf="@+id/iv_headimg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Tom"
                android:textColor="#FF4A4A4A"/>

            <TextView
                android:id="@+id/tv_desp"
                android:layout_marginTop="6dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginEnd="60dp"
                android:textSize="11dp"
                android:text="给XXX的YFH……"
                android:textColor="#FF414141"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:text="06-23 12:34:00"
                android:textColor="#FF9B9B9B"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_status"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7dp"
            android:text="交易中"
            android:textColor="#FFF37A03"/>

        <TextView
            android:id="@+id/tv_money"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:textSize="15dp"
            android:text="0.0"
            android:textColor="#FF000000"/>

    </RelativeLayout>


</LinearLayout>